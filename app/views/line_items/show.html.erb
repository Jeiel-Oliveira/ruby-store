<% content_for :title, t('.title') %>

<div class="md:w-2/3 w-full">  
  <h1 class="font-bold text-4xl"><%= t('.title') %></h1>

  <%= render @line_item %>

  <%= link_to "Edit this line item", edit_line_item_path(@line_item), class: "w-full sm:w-auto text-center rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium" %>
  <%= link_to "Back to line items", line_items_path, class: "w-full sm:w-auto text-center mt-2 sm:mt-0 sm:ml-2 rounded-md px-3.5 py-2.5 bg-transparent border border-gray-100 hover:bg-gray-50 inline-block font-medium" %>
  <div class="sm:inline-block mt-2 sm:mt-0 sm:ml-2">
    <%= button_to t('.destroy_line_item'), @line_item, method: :delete, class: "w-full rounded-md px-3.5 py-2.5 text-white bg-red-600 hover:bg-red-500 font-medium cursor-pointer", data: { turbo_confirm: t('.confirm_destroy') } %>
  </div>
</div>
