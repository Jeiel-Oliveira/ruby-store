<h1 class="text-2xl font-bold mb-6"><%= t('.title', user_email: @user.email_address) %></h1>

<div class="bg-white rounded-lg shadow-md p-6">
  <div class="space-y-4">      
    <div>
      <strong class="block font-medium mb-1"><%= t('.email_address') %></strong>
      <%= @user.email_address %>
    </div>

    <div>
      <strong class="block font-medium mb-1"><%= t('.created_at') %></strong>
      <%= @user.created_at %>
    </div>
  </div>

  <div class="mt-6 flex gap-4">
    <%= link_to t('.edit'), edit_user_path(@user), class: "bg-blue-500 text-white px-4 py-2 rounded-md hover:bg-blue-600 cursor-pointer" %>
    <%= link_to t('.delete'), @user, method: :delete, data: { turbo_confirm: "Are you sure you want to delete this user?" }, class: "bg-red-500 text-white px-4 py-2 rounded-md hover:bg-red-600 cursor-pointer" %>
    <%= link_to t('.back_to_users'), users_path, class: "border border-gray-300 text-gray-700 px-4 py-2 rounded-md hover:bg-gray-50 cursor-pointer" %>
  </div>
</div>
