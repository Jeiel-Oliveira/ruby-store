<div class="container mx-auto px-4 py-8">
  <h1 class="text-2xl font-bold mb-6">User Details</h1>

  <div class="bg-white rounded-lg shadow-md p-6">
    <div class="space-y-4">      
      <div>
        <strong class="block font-medium mb-1">Email Address:</strong>
        <%= @user.email_address %>
      </div>

      <div>
        <strong class="block font-medium mb-1">Created At:</strong>
        <%= @user.created_at %>
      </div>
    </div>

    <div class="mt-6 flex gap-4">
      <%= link_to "Edit", edit_user_path(@user), class: "bg-blue-500 text-white px-4 py-2 rounded-md hover:bg-blue-600 cursor-pointer" %>
      <%= link_to "Delete", @user, method: :delete, data: { turbo_confirm: "Are you sure you want to delete this user?" }, class: "bg-red-500 text-white px-4 py-2 rounded-md hover:bg-red-600 cursor-pointer" %>
      <%= link_to "Back to Users", users_path, class: "border border-gray-300 text-gray-700 px-4 py-2 rounded-md hover:bg-gray-50 cursor-pointer" %>
    </div>
  </div>
</div>
