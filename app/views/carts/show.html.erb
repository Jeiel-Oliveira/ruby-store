<% content_for :title, "Showing cart" %>

<div class="md:w-2/3 w-full">  
  <h1 class="font-bold text-4xl">Showing cart</h1>

  <ul>
    <% @cart.line_items.each do |item| %>
      <li>
        <%= item.product.name %> &times; <%= item.quantity %>
      </li>
    <% end %>
  </ul>

  <div class="sm:inline-block mt-2 sm:mt-0 sm:ml-2">
    <%= button_to "Destroy this cart", @cart, method: :delete, class: "w-full rounded-md px-3.5 py-2.5 text-white bg-red-600 hover:bg-red-500 font-medium cursor-pointer", data: { turbo_confirm: "Are you sure?" } %>
  </div>
</div>
