<% content_for :title, t('.title', order_number: @order.id) %>

<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="mb-6">
    <h1 class="font-bold text-2xl"><%= t('.title', order_number: @order.id) %></h1>
  </div>

  <div class="bg-white rounded-lg shadow-md p-6">
    <div class="mb-6">
      <%= render @order %>
    </div>
    
    <%= link_to t('.back_to_orders'), orders_path, class: "w-full sm:w-auto text-center mt-2 sm:mt-0 sm:ml-2 rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
    <%= link_to t('.edit_order'), edit_order_path(@order), class: "w-full sm:w-auto text-center rounded-md px-3.5 py-2.5 bg-blue-500 hover:bg-blue-600 text-white inline-block font-medium" %>
    <div class="sm:inline-block mt-2 sm:mt-0 sm:ml-2">
      <%= button_to t('.destroy_order'), @order, method: :delete, class: "w-full rounded-md px-3.5 py-2.5 text-white bg-red-600 hover:bg-red-500 font-medium cursor-pointer", data: { turbo_confirm: t('.confirm_destroy') } %>
    </div>
  </div>  
</div>
